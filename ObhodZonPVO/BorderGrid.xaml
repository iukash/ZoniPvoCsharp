<UserControl
    x:Class="ObhodZonPVO.BorderGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ObhodZonPVO"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="50"
    mc:Ignorable="d">
    <Grid>
        <Line
            Stroke="Black"
            X1="0"
            X2="50"
            Y1="0"
            Y2="50" />
        <Line
            Stroke="Black"
            X1="50"
            X2="0"
            Y1="0"
            Y2="50" />
        <Line
            Stroke="Black"
            X1="25"
            X2="25"
            Y1="0"
            Y2="50" />
        <Line
            Stroke="Black"
            X1="0"
            X2="50"
            Y1="25"
            Y2="25" />
        <Ellipse
            Width="8"
            Height="8"
            Fill="Black" />
        <Label
            Name="Lbl"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content=""
            FontSize="16"
            FontWeight="Bold"
            Foreground="Blue" />
    </Grid>
</UserControl>
